# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{md,html,mdc,svg}]
indent_size = 2


[*.{css,scss,less,styl}]
indent_size = 2


[*.{json,yml,yaml,toml}]
indent_size = 2


[*.{js,ts,jsx,tsx,mjs,cjs}]
indent_size = 2
